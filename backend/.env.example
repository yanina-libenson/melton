# Database
DATABASE_URL=postgresql+asyncpg://melton:melton_dev_password@localhost:5432/melton
DATABASE_URL_SYNC=postgresql://melton:melton_dev_password@localhost:5432/melton

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# OAuth - Mercado Libre
MERCADOLIBRE_CLIENT_ID=your_app_id
MERCADOLIBRE_CLIENT_SECRET=your_secret_key
OAUTH_STATE_EXPIRY_SECONDS=600

# LLM API Keys (user-provided per agent, these are for admin/system agents)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# LangFuse
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Environment
ENVIRONMENT=development
DEBUG=true
